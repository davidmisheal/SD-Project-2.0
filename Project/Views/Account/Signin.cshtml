@model User

@{
    ViewData["Title"] = "Sign In";
    if(ViewBag.acsses =="Admin")
	{
		 Layout = "~/Views/Shared/_AdminLayout.cshtml";
	}
}


<form asp-controller="Account" asp-action="Signin" method="post" class="sign_in_form">
    <input type ="hidden" asp-for="Id"/>

  


    <div class="form-group">
    <label for="Name">Name</label>
    <input type="text" class="form-control" id="Name" name = "Name" placeholder="Enter Name" required>
    </div>


    <div class="form-group">
    <label for="Email">Email address</label>
    <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter email" required >
    <span style="color:red;">@Html.ValidationMessageFor(x => x.Email)</span>
    </div>


  <div class="form-group">
    <label for="Password">Password</label>
    <input type="password" class="form-control" id="Password" name="Password" placeholder="Password" required >
  </div>


  <div class="form-group">
    <label for="ConfirmPassword">Confirm Password</label>
    <input type="password" class="form-control" id="ConfirmPassword" name="ConfirmPassword" placeholder="Enter Password" required > 
  </div>


    <div class="form-group">
  <label for="phonenum">Phone Number (format:01xxxxxxxxx):</label><br/>
  <input id="phonenum" type="tel" class="form-control" id="Phone_NUmber" name="Phone_NUmber" placeholder="Enter PhoneNumber" required >
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
